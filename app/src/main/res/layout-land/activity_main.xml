<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
        tools:context="com.example.dhirajmehta.helloandroid.MainActivity">

        <ImageView
            android:id="@+id/profileimage"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/udacityimage" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:text="Be in demand"
            android:textColor="#B0BEC5"
            android:layout_marginTop="200dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:text="Grow with Learning "
            android:textColor="@color/bottomtext"
            android:layout_below="@id/icons"
            android:layout_marginTop="20dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textSize="20dp" />

        <LinearLayout
            android:id="@+id/icons"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_below="@id/profileimage"
            android:layout_margin="20dp">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:src="@drawable/uimage" />

            <ImageView
                android:layout_width="32dp"
                android:layout_height="40dp"
                android:layout_weight="0.8"
                android:cropToPadding="true"
                android:gravity="center_vertical"
                android:src="@drawable/addr" />

            <ImageView
                android:layout_width="32dp"
                android:layout_height="40dp"
                android:layout_weight="0.6"
                android:gravity="center_vertical"
                android:src="@drawable/email" />

            <ImageView
                android:layout_width="32dp"
                android:layout_height="40dp"
                android:layout_weight="0.4"
                android:gravity="center_vertical"
                android:src="@drawable/phone" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/org_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/icons"
            android:layout_below="@id/profileimage"
            android:layout_margin="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:autoLink="web"
                android:paddingBottom="20dp"
                android:fontFamily="sans-serif"
                android:text="@string/org_name"
                android:gravity="center_vertical"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:autoLink="map"
                android:paddingBottom="10dp"
                android:gravity="center_vertical"
                android:fontFamily="sans-serif"
                android:text="@string/addr"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:autoLink="web"
                android:paddingBottom="10dp"
                android:fontFamily="sans-serif"
                android:text="@string/email"
                android:gravity="center_vertical"
                android:textSize="20dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_weight="2"
                android:autoLink="phone"
                android:fontFamily="sans-serif"
                android:text="@string/phone"
                android:textSize="20dp" />


        </LinearLayout>


    </RelativeLayout>

</ScrollView>